<h1>Edit Order</h1>

<form method="POST" action="/pizzas/<%= @pizza.id %>">
  
  <label for="first-name-field">First Name: </label> 
    <input type="text" id="first-name-field" name="first_name" value="<%= @pizza.first_name %>"/>  

<br>
  
  <label for="last-name-field">Last Name: </label>
    <input type="text" id="last-name-field" name="last_name" value="<%= @pizza.last_name %>"/>

 <br>
 
  <label for="pizza-select">Select Pizza: </label>
    <select id="pizza-select" name="topping" />  
      <option value="Margherita">Margherita</option>
      <option value="Calzone">Calzone</option>
    </select>

  <br>

  <label for="quantity">Quantity: </label>
    <input type="number" 
          min="1" 
          step="1" 
          id="quantity" 
          name="quantity" 
          value="<%= @pizza.quantity %>"/> 

  <br>
  <input type="submit" value="Update Order" />
</form>